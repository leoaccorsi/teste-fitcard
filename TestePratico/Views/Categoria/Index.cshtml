@model IEnumerable<TestePraticoModel.Model.CategoriaModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row py-3">
    <div class="col">
        <h3>Categoria</h3>
    </div>

    <div class="col">
        @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary float-right btn-sm" })
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th class="p-2">
                    Nome
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
