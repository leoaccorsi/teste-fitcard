@model IEnumerable<TestePraticoModel.ViewModel.EstabGridViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row py-3">
    <div class="col">
        <h3>Estabelecimento</h3>
    </div>

    <div class="col">
        @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary float-right btn-sm" })
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.razao_social)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.nome_fantasia)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.cnpj)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.endereco)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.cidade)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.estado)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.telefone)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.data_cadastro)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.categoria)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.agencia)
                </th>
                <th class="p-2">
                    @Html.DisplayNameFor(model => model.conta)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.razao_social)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.nome_fantasia)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.cnpj)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.endereco)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.cidade)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.telefone)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.data_cadastro)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.categoria)
                    </td>
                    <td class="p-2 text-center">
                        @{ var tipo_label = item.status == TestePraticoModel.Enum.EStatus.Ativo ? "success" : "danger"; }
                        <span class="badge badge-@tipo_label">@item.status</span>
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.agencia)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.conta)
                    </td>
                    <td class="text-center p-1">
                        <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ações
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "dropdown-item" })

                            @if (item.status == TestePraticoModel.Enum.EStatus.Ativo)
                            {
                                @Html.ActionLink("Desativar", "Desativar", new { id = item.id }, new { @class = "dropdown-item" })
                            }
                            else
                            {
                                @Html.ActionLink("Ativar", "Ativar", new { id = item.id }, new { @class = "dropdown-item" })
                            }

                            @Html.ActionLink("Excluir", "Delete", new { id = item.id }, new { @class = "dropdown-item btnDelete" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>