                    @Html.EditorFor(model => model.conta, new { htmlAttributes = new { @class = "form-control conta-mask" } })
                    @Html.ValidationMessageFor(model => model.conta, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr class="mt-5" />
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-defaul float-left" })

        <div class="float-right">
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () { $("input").attr("autocomplete", "off"); });
    </script>
}
